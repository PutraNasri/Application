<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bggg">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/TFusername_login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:hint="User Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TFpassword_login"
        android:layout_below="@+id/TFusername_login"
        android:layout_centerHorizontal="true"
        android:hint="Password" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/TFpassword_login"
        android:layout_alignEnd="@+id/TFpassword_login"
        android:layout_alignLeft="@+id/TFpassword_login"
        android:layout_alignStart="@+id/TFpassword_login"
        android:onClick="onLoginClick"
        android:background="#4674c8"
        android:alpha="0.8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign Up"
        android:id="@+id/daftar"
        android:layout_marginTop="49dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/login"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:onClick="onRegisterClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign In"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/TFusername_login"
        android:layout_alignLeft="@+id/TFusername_login"
        android:layout_alignStart="@+id/TFusername_login"
        android:layout_marginBottom="70dp" />
</RelativeLayout>
